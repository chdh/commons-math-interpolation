{
   "compilerOptions": {
      "allowUnreachableCode": false,
      "declaration": true,
      "declarationDir": "dist",
      "lib": ["ES6"],
      "module": "ES6",
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": true,
      "strict": true,
      "target": "ES6"
   },
   "include": [
      "src/**/*"
   ]
}
